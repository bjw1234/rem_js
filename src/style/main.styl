pxToRem(val)
  val = unit(val, rem)
  base = 37.5
  return val / base

.clearfix:after
  content: ''
  display: table
  clear: both

.header
  width: 100%
  height: pxToRem(40px)
  background-color: red
  .header-content
    width: 100%
    height: 100%
    display: flex
    justify-content: space-around
    align-items: center
    .header-item
      flex: 1
      text-align: center
      color: #ffcdce
      font-size: pxToRem(16px)
      &:nth-child(2)
        color #fff
        font-size: pxToRem(17px)

.banner-content
  position: relative
  .banner
    display: block
    width: 100%
    height: pxToRem(190px)
  .banner-title
    position absolute
    left: pxToRem(15px)
    bottom: pxToRem(15px)
    color: #fff
    font-size: pxToRem(16px)

.news-content
  .news-item
    width: 100%
    height pxToRem(90px)
    .item-inner
      position: relative
      overflow hidden
      margin-left: pxToRem(15px)
      margin-right: pxToRem(15px)
      padding-bottom: pxToRem(10px)
      border-bottom: pxToRem(1px) solid #e5e5e5
      .news-img
        float: left
        display: block
        width: pxToRem(95px)
        height: pxToRem(70px)
        margin-top pxToRem(10px)
        margin-right: pxToRem(15px)
      .news-title
        color: #404040
        font-size: pxToRem(15px)
        margin-top: pxToRem(16px)
        line-height: pxToRem(18px)
      .time
        position: absolute
        left: pxToRem(105px)
        bottom: pxToRem(17px)
        color: #888
        font-size: pxToRem(12px)
      .num
        position: absolute
        right: pxToRem(14px)
        bottom: pxToRem(17px)
        color: #888
        font-size: pxToRem(12px)
